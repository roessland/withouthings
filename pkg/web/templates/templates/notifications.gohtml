{{define "title"}}Notifications{{end}}

{{define "content"}}
  <div class="py-4">
    {{if not .Notifications}}
      <p>No data</p>
      <p>{{ .Error }}</p>
    {{else}}
      <div data-test-id="notifications-div" class="space-y-12">
        {{ range $_, $value := .Notifications }}
          <div data-test-id="notification-div" class="space-y-1">
            <h2 class="text-lg ">{{ $value.AppliDescription }}</h2>
            <h3>üóìÔ∏è {{ $value.ReceivedAt }}</h3>

            <h3 class="pt-2">Webhook params:</h3>
            <pre class="whitespace-break-spaces overflow-x-scroll text-xs" >{{ $value.Params }}</pre>

            <h3 class="pt-2">Data:</h3>
            <pre class="whitespace-break-spaces overflow-x-scroll text-xs" >{{ $value.DataPretty  }}</pre>
          </div>
        {{ end }}
      </div>
    {{end}}
  </div>
{{end}}